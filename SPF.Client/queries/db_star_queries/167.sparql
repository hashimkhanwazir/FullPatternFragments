PREFIX  dbpo: <http://dbpedia.org/ontology/>
PREFIX  rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX  foaf: <http://xmlns.com/foaf/0.1/>

SELECT  ?instanceOfGame ?description
WHERE
  { ?instanceOfGame
              rdf:type       dbpo:Game ;
              foaf:name      ?name ;
              dbpo:abstract  ?description
  }
